<h1>受注依頼一覧</h1>
<% if @orders.present? %>
  <p><% @orders.each_with_index do |order, i| %></p>
  <table>
    <tr>
      <th>依頼タイトル</th>
      <td><%= link_to(order.title, request_path(order)) %></td>
    </tr>
    <tr>
      <th>素材の種類</th>
      <td><%= order.material_kind.name %></td>
    </tr>
    <tr>
      <th>依頼者</th>
      <td><%= link_to order.user.name, "/user/#{order.user.id}" %></td>
    </tr>
    <tr>
      <th>仕様</th>
      <td><%= order.specification %></td>
    </tr>
    <tr>
      <th>〆切</th>
      <td><%= order.delivery_date.strftime("%Y/%m/%d") %></td>
    </tr>
  </table>
  <% @order_details[i].each_with_index do |order_detail, i| %>
  <h2><%= "詳細依頼#{i+1}" %></h2>
  <table>
    <tr>
      <th>依頼サイズ</th>
      <td><%= order_detail.material_size %></td>
    </tr>
    <tr>
      <th>依頼ジャンル</th>
      <td><%= order_detail.material_genre.name %></td>
    </tr>
    <tr>
      <th>依頼仕様</th>
      <td><%= order_detail.specification %></td>
    </tr>
  </table>
  <button>button</button>
<% end %>
  <% end %>
<% else %>
<p>依頼はありません</p>
<% end %>
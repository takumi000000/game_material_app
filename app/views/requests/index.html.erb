<h1>依頼一覧</h1>

<p><% @requests.each do |request| %></p>
<table>
  <tr>
    <th>依頼タイトル</th>
    <td><%= link_to(request.title, request_path(request)) %></td>
  </tr>
  <tr>
    <th>素材の種類</th>
    <td><%= request.material_kind.name %></td>
  </tr>
  <tr>
    <th>依頼者</th>
    <td><%= request.user.name %></td>
  </tr>
  <tr>
    <th>仕様</th>
    <td><%= request.specification %></td>
  </tr>
</table>

<% end %>

<h1>トップページ</h1>

<%= link_to "依頼者ページに移動する", requester_index_path %>
<%= link_to "受注者ページに移動する", contractor_index_path %>
<%= link_to "作品一覧ページに移動する", material_storages_index_path %>

<% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
  <h3> ユーザー名： <%= current_user.email %></h4>
  <div>
    <% if @user.check_job == 1 %>
    <%= link_to "マイページに移動する", "/requester/#{current_user.id}" %>     
    <% elsif @user.check_job == 2 %>
    <%= link_to "マイページに移動する", "/contractor/#{current_user.id}" %>
    <% end %>
    <a><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></a> <!-- ログアウトをする -->
  </div>
<% else %>
  <div><a><%= link_to "ログイン", new_user_session_path, class: 'post' %> <!-- ログイン画面に移行する --></a></div>
  <div><a><%= link_to "新規登録", new_user_registration_path, class: 'post' %> <!-- 新規登録画面に移行する --></a></div>
<% end %>

<%= link_to "作品一覧ページに移動する", material_storages_index_path %>